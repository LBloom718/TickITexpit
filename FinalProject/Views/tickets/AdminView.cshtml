@model IEnumerable<FinalProject.Infrastructure.ticket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h3>Welcome, @ViewBag.name</h3>
@using (Html.BeginForm("Index", "tickets", FormMethod.Post))
{
    <div class="add_remove">
        <p>
            <button type="button" onclick="location.href='@Url.Action("Create", "users")'">Add New User</button>
        </p>

        <p align="center">
            <input type="submit" name="submit" id="open" class="btn btn-lg" value="@ViewBag.UnOpen" />
            <input type="submit" name="submit" id="inprogress" class="btn btn-default btn-lg" value="@ViewBag.Open" />
            <input type="submit" name="submit" id="closed" class="btn btn-default btn-lg " value="@ViewBag.Closed" />
        </p>
    </div>

 <table class="table">
    <tr>
        <th>
            @Html.DisplayName("#")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.type)
        </th>
        <th></th>
    </tr>
    @{var i= 0;}
    @foreach (var item in Model)
    {
        i++;
        <tr>
            <td>
                @Html.Display(i.ToString())

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ticketID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ticketID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ticketID })
            </td>
        </tr>
    }
</table>

}


